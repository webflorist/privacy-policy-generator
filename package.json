		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"humanize-duration": "^3.29.0",
		"i18n-iso-countries": "^7.6.0",
		"nuxt": "^3.6.5",
		"postcss": "^8.4.27",
		"postcss-extend": "^1.0.5",
		"postcss-html": "^1.5.0",
