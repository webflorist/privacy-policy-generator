	"scripts": {
		"build": "nuxi cleanup && nuxi build",
		"dev": "nuxi cleanup && nuxi dev",
		"generate": "nuxi cleanup && nuxi generate",
		"preview": "nuxi preview",
		"upgrade": "nuxt upgrade --force && npx npm-check-updates -i -u && yarn install",
		"lint:js": "eslint --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .lintignore .",
		"lintfix:js": "yarn lint:js --fix",
		"lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .lintignore --config stylelint.config.js",
		"lintfix:style": "yarn lint:style --fix",
		"lint:prettier": "prettier --ignore-path ./.lintignore --check .",
		"lintfix:prettier": "prettier --ignore-path ./.lintignore --write --list-different .",
		"lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
		"lintfix": "yarn lintfix:prettier && yarn lintfix:js && yarn lintfix:style",
		"postinstall": "nuxi prepare"
	},
	"devDependencies": {
		"@fontsource/amaranth": "^5.0.7",
